{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "lint": {},
        "test": {
            "dependsOn": ["build"],
            "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts",
                "test/**/*.tsx"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "deploy": {
            "dependsOn": ["build", "test", "lint"]
        }
    }
}
